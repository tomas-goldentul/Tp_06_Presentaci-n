@{
    ViewData["Title"] = "Inicia sesión";
}
<div>
<p>@ViewBag.Error</p>
    <form action='@Url.Action("VerificarUsuario", "Home")' method="POST" class="form">
        <input type="text" 
            name="usuarioIngresado" 
            maxlength="20" 
            placeholder="Ingresá tu usuario" 
            required 
            autocomplete="off">
        <input type="password" 
            name="contraseñaIngresada" 
            maxlength="20" 
            placeholder="Ingresá tu contraseña" 
            required 
            autocomplete="off">
        <button type="submit" id="submit">Log in</button>
    </form>
</div>